generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                   Int       @id @default(autoincrement())
  email                String    @unique
  password_hash        String
  role                 UserRole  @default(STAFF)
  refresh_token        String?
  is_locked            Boolean   @default(false)
  must_change_password Boolean   @default(true)
  last_login_at        DateTime?
  email_verified       Boolean   @default(false)

  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  is_deleted Boolean   @default(false)
  deleted_at DateTime?

  employee_id Int?      @unique
  employee    Employee? @relation(fields: [employee_id], references: [id])

  @@map("users")
}

model Employee {
  id                  Int         @id @default(autoincrement())
  dob                 DateTime?
  phone               String?     @unique
  email               String?     @unique
  address             String?
  created_at          DateTime    @default(now())
  department_id       Int?
  full_name           String
  hire_date           DateTime?
  identity_number     String?
  position_id         Int?
  updated_at          DateTime    @updatedAt
  deleted_at          DateTime?
  is_deleted          Boolean     @default(false)
  gender              Gender?
  work_status         WorkStatus  @default(working)
  contracts           Contract[]
  managing_department Department? @relation("DepartmentManager")
  department          Department? @relation("DepartmentEmployees", fields: [department_id], references: [id])
  position            Position?   @relation(fields: [position_id], references: [id])
  user_account        User?

  @@map("employees")
}

model Department {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
  code        String
  deleted_at  DateTime?
  is_deleted  Boolean    @default(false)
  manager_id  Int?       @unique
  status      Boolean    @default(true)
  manager     Employee?  @relation("DepartmentManager", fields: [manager_id], references: [id])
  employees   Employee[] @relation("DepartmentEmployees")

  @@map("departments")
}

model Position {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
  deleted_at  DateTime?
  is_deleted  Boolean    @default(false)
  status      Boolean    @default(true)
  employees   Employee[]

  @@map("positions")
}

model Contract {
  id            Int            @id @default(autoincrement())
  code          String         @unique
  contract_type ContractType
  status        ContractStatus @default(draft)
  start_date    DateTime
  end_date      DateTime?
  salary        Decimal?       @db.Decimal(15, 2)
  work_location String?
  notes         String?
  created_at    DateTime       @default(now())
  updated_at    DateTime       @updatedAt
  is_deleted    Boolean        @default(false)
  deleted_at    DateTime?
  employee_id   Int
  employee      Employee       @relation(fields: [employee_id], references: [id])

  @@map("contracts")
}

enum UserRole {
  ADMIN
  MANAGER
  STAFF
}

enum Gender {
  male
  female
}

enum WorkStatus {
  working
  resigned
  probation
  leave
}

enum ContractType {
  indefinite
  fixed
  probation
  intern
}

enum ContractStatus {
  draft
  pending
  active
  expired
}
