generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                   Int       @id @default(autoincrement())
  email                String    @unique
  password_hash        String
  role                 UserRole  @default(STAFF)
  is_locked            Boolean   @default(false)
  must_change_password Boolean   @default(true)
  last_login_at        DateTime?

  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  is_deleted Boolean   @default(false)
  deleted_at DateTime?

  employee_id Int?      @unique
  employee    Employee? @relation(fields: [employee_id], references: [id])
  reviewed_requests AttendanceRequest[]

  @@map("users")
}

model Employee {
  id                  Int         @id @default(autoincrement())
  dob                 DateTime?
  phone               String?     @unique
  email               String?     @unique
  address             String?
  created_at          DateTime    @default(now())
  department_id       Int?
  full_name           String
  hire_date           DateTime?
  identity_number     String?
  position_id         Int?
  updated_at          DateTime    @updatedAt
  deleted_at          DateTime?
  is_deleted          Boolean     @default(false)
  gender              Gender?
  work_status         WorkStatus  @default(working)
  contracts           Contract[]
  attendances         Attendance[]
  attendance_requests AttendanceRequest[]
  department          Department? @relation("DepartmentEmployees", fields: [department_id], references: [id])
  position            Position?   @relation(fields: [position_id], references: [id])
  user_account        User?

  @@map("employees")
}

model Department {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
  code        String
  deleted_at  DateTime?
  is_deleted  Boolean    @default(false)
  status      Boolean    @default(true)
  employees   Employee[] @relation("DepartmentEmployees")

  @@map("departments")
}

model Position {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
  deleted_at  DateTime?
  is_deleted  Boolean    @default(false)
  status      Boolean    @default(true)
  employees   Employee[]

  @@map("positions")
}

model Contract {
  id            Int            @id @default(autoincrement())
  code          String         @unique
  contract_type ContractType
  status        ContractStatus @default(draft)
  start_date    DateTime
  end_date      DateTime?
  salary        Decimal?       @db.Decimal(15, 2)
  work_location String?
  notes         String?
  created_at    DateTime       @default(now())
  updated_at    DateTime       @updatedAt
  is_deleted    Boolean        @default(false)
  deleted_at    DateTime?
  employee_id   Int
  employee      Employee       @relation(fields: [employee_id], references: [id])

  @@map("contracts")
}

enum UserRole {
  ADMIN
  HR
  STAFF
}

enum Gender {
  male
  female
}

enum WorkStatus {
  working
  resigned
  probation
  leave
}

enum ContractType {
  indefinite
  fixed
  probation
  intern
}

enum ContractStatus {
  draft
  pending
  active
  expired
}

model Shift {
  id                       Int      @id @default(autoincrement())
  shift_name               String
  start_time               DateTime @db.Time()
  end_time                 DateTime @db.Time()
  early_check_in_minutes   Int      @default(15)
  late_checkout_minutes    Int      @default(15)
  created_at               DateTime @default(now())
  updated_at               DateTime @updatedAt
  is_deleted               Boolean  @default(false)
  deleted_at               DateTime?

  attendances              Attendance[]

  @@map("shifts")
}

model Attendance {
  id            Int      @id @default(autoincrement())
  employee_id   Int
  shift_id      Int
  date          DateTime @db.Date()
  check_in      DateTime?
  check_out     DateTime?
  work_hours    Decimal? @db.Decimal(5, 2)
  status        String   @default("present") // present, late, absent, early_checkout
  late_minutes  Int      @default(0)
  early_minutes Int      @default(0)
  notes         String?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  is_deleted    Boolean  @default(false)
  deleted_at    DateTime?

  employee      Employee @relation(fields: [employee_id], references: [id])
  shift         Shift    @relation(fields: [shift_id], references: [id])

  @@unique([employee_id, date, shift_id])
  @@map("attendances")
}

model AttendanceRequest {
  id              Int      @id @default(autoincrement())
  employee_id     Int
  attendance_id   Int?
  request_type    String   // "forgot_checkin", "forgot_checkout", "leave"
  reason          String
  requested_date  DateTime @db.Date()
  new_check_in    DateTime?
  new_check_out   DateTime?
  status          String   @default("pending") // pending, approved, rejected
  reviewed_by     Int?
  reviewed_at     DateTime?
  notes           String?
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
  is_deleted      Boolean  @default(false)
  deleted_at      DateTime?

  employee        Employee @relation(fields: [employee_id], references: [id])
  reviewer        User?    @relation(fields: [reviewed_by], references: [id])

  @@map("attendance_requests")
}
